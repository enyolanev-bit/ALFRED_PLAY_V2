---
/**
 * DecadeSection — Composant réutilisable pour chaque décennie.
 * Layout asymétrique : texte d'un côté, espace 3D de l'autre (canvas fixe visible).
 * Alternance gauche/droite gérée par CSS nth-child.
 */

interface Props {
  id: string;
  label: string;
  title: string;
  subtitle: string;
  historicalText?: string;
  personalStory?: string;
  fallbackImage?: string;
}

const { id, label, title, subtitle, historicalText, personalStory, fallbackImage } = Astro.props;
---

<section
  class="section-decade"
  id={`decade-${id}`}
  data-decade={id}
  aria-label={`Décennie ${label}`}
>
  {/* Chiffre de décennie — très grand, très transparent, en arrière-plan */}
  <span class="section-decade__number" aria-hidden="true">{label}</span>

  {/* Colonne texte — gauche par défaut, droite sur les sections paires */}
  <div class="section-decade__text">
    <h2 class="section-decade__title">{title}</h2>
    <p class="section-decade__subtitle">{subtitle}</p>

    {historicalText && (
      <p class="section-decade__history" data-decade-text>
        {historicalText}
      </p>
    )}

    {personalStory && (
      <blockquote class="section-decade__personal" data-decade-personal>
        <span class="section-decade__personal-tag">Mon histoire</span>
        <p>{personalStory}</p>
      </blockquote>
    )}
  </div>

  {/* Colonne 3D — espace vide pour que le canvas fixe soit visible */}
  <div class="section-decade__visual" aria-hidden="true">
    {fallbackImage && (
      <img
        class="section-decade__fallback"
        src={fallbackImage}
        alt={`${title} — ${subtitle}`}
        loading="lazy"
        width="400"
        height="300"
      />
    )}
  </div>
</section>

<style>
  /* Fond transparent — la 3D (canvas z-index: 0) est visible en arrière-plan */
  .section-decade {
    background-color: transparent;
    color: var(--color-text-primary);
  }

  /* Chiffre de décennie — très grand, très discret, en arrière-plan */
  .section-decade__number {
    font-family: var(--font-display);
    font-size: var(--text-decade);
    font-weight: 700;
    color: var(--color-text-muted);
    opacity: 0.3;
    position: absolute;
    top: 50%;
    right: max(5vw, 2rem);
    transform: translateY(-50%);
    user-select: none;
    pointer-events: none;
    z-index: 0;
    line-height: 1;
  }

  /* Sections paires : chiffre à gauche */
  .section-decade:nth-child(even) .section-decade__number {
    right: auto;
    left: max(5vw, 2rem);
  }

  /* Colonne texte */
  .section-decade__text {
    position: relative;
    z-index: 1;
    max-width: 600px;
  }

  .section-decade__title {
    font-family: var(--font-display);
    font-size: var(--text-h1);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-accent);
  }

  .section-decade__subtitle {
    font-family: var(--font-body);
    font-size: var(--text-h3);
    color: var(--color-text-secondary);
    margin-top: var(--space-sm);
    line-height: 1.5;
  }

  /* Texte historique — apparaît progressivement au scroll (GSAP) */
  .section-decade__history {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: var(--color-text-primary);
    line-height: 1.7;
    max-width: 38ch;
    margin-top: var(--space-md);
    opacity: 0;
    transform: translateY(1.5rem);
  }

  /* Histoire personnelle — bloc avec bordure accent */
  .section-decade__personal {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--space-md);
    margin-top: var(--space-md);
    opacity: 0;
    transform: translateY(1.5rem);
  }

  .section-decade__personal-tag {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-small);
    font-style: normal;
    font-weight: 600;
    color: var(--color-accent);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: var(--space-xs);
  }

  .section-decade__personal p {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: var(--color-text-secondary);
    font-style: italic;
    line-height: 1.7;
    margin: 0;
  }

  /* Colonne visuelle — espace pour le canvas 3D */
  .section-decade__visual {
    position: relative;
    z-index: 1;
    min-height: 300px;
  }

  /* Image fallback — masquée par défaut, visible quand body a .no-webgl */
  .section-decade__fallback {
    display: none;
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    opacity: 0.85;
  }

  :global(body.no-webgl) .section-decade__fallback {
    display: block;
  }
</style>
