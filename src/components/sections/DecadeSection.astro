---
/**
 * DecadeSection — Composant réutilisable pour chaque décennie.
 * Affiche le titre, sous-titre, texte historique et une image fallback pour GPU tier 0.
 * La scène 3D est rendue dans le canvas global (couche 1), pas ici.
 */

interface Props {
  id: string;
  label: string;
  title: string;
  subtitle: string;
  bgColor: string;
  accentColor: string;
  textColor: string;
  historicalText?: string;
  personalStory?: string;
  fallbackImage?: string;
}

const { id, label, title, subtitle, bgColor, accentColor, textColor, historicalText, personalStory, fallbackImage } = Astro.props;
---

<section
  class="section-decade"
  id={`decade-${id}`}
  data-decade={id}
  aria-label={`Décennie ${label}`}
  style={`--decade-bg: ${bgColor}; --decade-accent: ${accentColor}; --decade-text: ${textColor};`}
>
  <div class="section-decade__inner">
    <span class="section-decade__label">{label}</span>
    <h2 class="section-decade__title">{title}</h2>
    <p class="section-decade__subtitle">{subtitle}</p>

    {/* Texte historique — révélé progressivement au scroll (GSAP) */}
    {historicalText && (
      <p class="section-decade__history" data-decade-text>
        {historicalText}
      </p>
    )}

    {/* Histoire personnelle de Nevil — visuellement distinct, ton personnel */}
    {personalStory && (
      <blockquote class="section-decade__personal" data-decade-personal>
        <span class="section-decade__personal-tag">Mon histoire</span>
        <p>{personalStory}</p>
      </blockquote>
    )}

    {/* Image fallback pour GPU tier 0 (masquée par défaut, visible si no-webgl) */}
    {fallbackImage && (
      <img
        class="section-decade__fallback"
        src={fallbackImage}
        alt={`${title} — ${subtitle}`}
        loading="lazy"
        width="400"
        height="300"
      />
    )}
  </div>
</section>

<style>
  .section-decade {
    /* Fond transparent — la 3D (canvas z-index: 0) est visible en arrière-plan.
       La couleur d'ambiance est gérée par scene.background dans chaque scène Three.js. */
    background-color: transparent;
    color: var(--decade-text);
  }

  .section-decade__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.75rem;
    max-width: 40rem;
    /* Fond semi-transparent teinté de la couleur de la décennie — lisibilité par-dessus la 3D */
    padding: 2rem 1.5rem;
    border-radius: 1rem;
    background: color-mix(in srgb, var(--decade-bg) 65%, transparent);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .section-decade__label {
    font-family: var(--font-display);
    font-size: clamp(4rem, 15vw, 10rem);
    font-weight: 700;
    opacity: 0.1;
    line-height: 1;
    letter-spacing: -0.05em;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
  }

  .section-decade__title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    color: var(--decade-accent);
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.6);
  }

  .section-decade__subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    opacity: 0.7;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.5);
  }

  /* Texte historique — apparaît progressivement au scroll */
  .section-decade__history {
    font-size: clamp(0.95rem, 2.2vw, 1.125rem);
    line-height: 1.8;
    max-width: 34rem;
    margin-top: 1rem;
    opacity: 0;
    transform: translateY(1.5rem);
    text-shadow: 0 1px 6px rgba(0, 0, 0, 0.4);
  }

  /* Histoire personnelle — visuellement distinct du texte historique */
  .section-decade__personal {
    position: relative;
    font-size: clamp(0.9rem, 2vw, 1.05rem);
    font-style: italic;
    line-height: 1.75;
    max-width: 30rem;
    margin-top: 1.25rem;
    padding: 1rem 1.25rem;
    border-left: 3px solid var(--decade-accent);
    text-align: left;
    opacity: 0;
    transform: translateY(1.5rem);
    background: color-mix(in srgb, var(--decade-bg) 50%, transparent);
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .section-decade__personal p {
    margin: 0;
    opacity: 0.85;
  }

  .section-decade__personal-tag {
    display: inline-block;
    font-size: 0.7rem;
    font-style: normal;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--decade-accent);
    margin-bottom: 0.5rem;
  }

  /* Image fallback — masquée par défaut, visible quand body a .no-webgl */
  .section-decade__fallback {
    display: none;
    max-width: 100%;
    height: auto;
    margin-top: 1.5rem;
    border-radius: 0.5rem;
    opacity: 0.85;
  }

  :global(body.no-webgl) .section-decade__fallback {
    display: block;
  }
</style>
