---
/**
 * DecadeSection — Composant réutilisable pour chaque décennie.
 * Layout asymétrique : texte d'un côté, espace 3D de l'autre (canvas fixe visible).
 * Alternance gauche/droite gérée par CSS nth-child.
 * Progressive disclosure : tous les éléments commencent invisibles, animés par GSAP timeline.
 */

interface Props {
  id: string;
  label: string;
  title: string;
  subtitle: string;
  historicalText?: string;
  personalStory?: string;
  transitionTeaser?: string | null;
  bgColor?: string;
  fallbackImage?: string;
}

const { id, label, title, subtitle, historicalText, personalStory, transitionTeaser, bgColor, fallbackImage } = Astro.props;
---

<section
  class="section-decade"
  id={`decade-${id}`}
  data-decade={id}
  data-bg-color={bgColor}
  aria-label={`Décennie ${label}`}
  style={bgColor ? `background-color: transparent;` : undefined}
>
  {/* Chiffre de décennie — très grand, très transparent, en arrière-plan */}
  <span class="section-decade__number" data-decade-number aria-hidden="true">{label}</span>

  {/* Colonne texte — gauche par défaut, droite sur les sections paires */}
  <div class="section-decade__text">
    <h2 class="section-decade__title" data-decade-title>{title}</h2>
    <p class="section-decade__subtitle" data-decade-subtitle>{subtitle}</p>

    {/* Histoire personnelle — AU-DESSUS du texte historique */}
    {personalStory && (
      <blockquote class="section-decade__personal" data-decade-personal>
        <span class="section-decade__personal-tag">Mon histoire</span>
        <p>{personalStory}</p>
      </blockquote>
    )}

    {historicalText && (
      <p class="section-decade__history" data-decade-text>
        {historicalText}
      </p>
    )}
  </div>

  {/* Colonne 3D — espace vide pour que le canvas fixe soit visible */}
  <div class="section-decade__visual" aria-hidden="true">
    {fallbackImage && (
      <img
        class="section-decade__fallback"
        src={fallbackImage}
        alt={`${title} — ${subtitle}`}
        loading="lazy"
        width="400"
        height="300"
      />
    )}
  </div>

  {/* Teaser Zeigarnik — cliffhanger en bas de section */}
  {transitionTeaser && (
    <div class="section-decade__teaser" aria-hidden="true">
      <p class="section-decade__teaser-text">{transitionTeaser}</p>
      <span class="section-decade__teaser-chevron">&#8595;</span>
    </div>
  )}
</section>

<style>
  /* Fond — commence transparent, la couleur bgColor est animée par GSAP */
  .section-decade {
    background-color: transparent;
    color: var(--color-text-primary);
    transition: background-color var(--duration-slow, 800ms) var(--ease-out-quart, cubic-bezier(0.25, 1, 0.5, 1));
  }

  /* Chiffre de décennie — très grand, très discret, en arrière-plan */
  /* Commence invisible + scale réduit, animé par GSAP */
  .section-decade__number {
    font-family: var(--font-display);
    font-size: var(--text-decade);
    font-weight: 700;
    color: var(--color-text-muted);
    opacity: 0;
    position: absolute;
    top: 50%;
    right: max(5vw, 2rem);
    transform: translateY(-50%) scale(0.8);
    transform-origin: center center;
    user-select: none;
    pointer-events: none;
    z-index: 0;
    line-height: 1;
  }

  /* Sections paires : chiffre à gauche */
  .section-decade:nth-child(even) .section-decade__number {
    right: auto;
    left: max(5vw, 2rem);
  }

  /* Colonne texte */
  .section-decade__text {
    position: relative;
    z-index: 1;
    max-width: 600px;
  }

  /* Titre — commence invisible, animé par GSAP */
  .section-decade__title {
    font-family: var(--font-display);
    font-size: var(--text-h1);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-accent);
    opacity: 0;
    transform: translateY(1.5rem);
  }

  /* Sous-titre — commence invisible, animé par GSAP */
  .section-decade__subtitle {
    font-family: var(--font-body);
    font-size: var(--text-h3);
    color: var(--color-text-secondary);
    margin-top: var(--space-sm);
    line-height: 1.5;
    opacity: 0;
    transform: translateY(1.5rem);
  }

  /* Histoire personnelle — bloc avec bordure accent, AU-DESSUS du texte historique */
  .section-decade__personal {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--space-md);
    margin-top: var(--space-md);
    opacity: 0;
    transform: translateY(1.5rem);
  }

  .section-decade__personal-tag {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-small);
    font-style: normal;
    font-weight: 600;
    color: var(--color-accent);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: var(--space-xs);
  }

  .section-decade__personal p {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: var(--color-text-secondary);
    font-style: italic;
    line-height: 1.7;
    margin: 0;
    opacity: 0.8;
  }

  /* Texte historique — apparaît progressivement au scroll (GSAP) */
  .section-decade__history {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: var(--color-text-primary);
    line-height: 1.7;
    max-width: 38ch;
    margin-top: var(--space-md);
    opacity: 0;
    transform: translateY(1.5rem);
  }

  /* Colonne visuelle — espace pour le canvas 3D */
  .section-decade__visual {
    position: relative;
    z-index: 1;
    min-height: 300px;
  }

  /* Image fallback — masquée par défaut, visible quand body a .no-webgl */
  .section-decade__fallback {
    display: none;
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    opacity: 0.85;
  }

  :global(body.no-webgl) .section-decade__fallback {
    display: block;
  }

  /* Teaser Zeigarnik — cliffhanger en bas de section */
  .section-decade__teaser {
    grid-column: 1 / -1;
    text-align: center;
    padding-top: var(--space-lg);
    padding-bottom: var(--space-md);
    opacity: 0;
    transform: translateY(1.5rem);
  }

  .section-decade__teaser-text {
    font-family: var(--font-body);
    font-size: var(--text-small);
    color: var(--color-accent);
    font-style: italic;
    line-height: 1.5;
    margin: 0;
  }

  .section-decade__teaser-chevron {
    display: inline-block;
    font-size: 1.25rem;
    color: var(--color-accent);
    margin-top: var(--space-xs);
    animation: teaser-bounce 2s var(--ease-out-quart, cubic-bezier(0.25, 1, 0.5, 1)) infinite;
  }

  @keyframes teaser-bounce {
    0%, 100% {
      transform: translateY(0);
      opacity: 0.6;
    }
    50% {
      transform: translateY(6px);
      opacity: 1;
    }
  }
</style>
