---
/**
 * IntroSection — Écran d'accueil avec CTA "Commencer le voyage".
 * Premier contact visuel, doit donner le "wow" immédiat.
 * Le clic sur le CTA débloquera l'AudioContext (STORY-002).
 */
---

<section class="intro-section" id="intro" aria-label="Accueil">
  <div class="intro-section__content">
    <h1 class="intro-section__title">
      <span class="intro-section__title-line">L'histoire de</span>
      <span class="intro-section__title-line intro-section__title-line--accent">l'informatique</span>
    </h1>
    <p class="intro-section__subtitle">
      Un voyage immersif de 1960 à aujourd'hui
    </p>
    <button class="intro-section__cta" id="cta-start" type="button" aria-label="Commencer le voyage">
      Commencer le voyage
    </button>
    <div class="intro-section__scroll-hint" aria-hidden="true">
      <span class="intro-section__scroll-arrow">↓</span>
    </div>
  </div>
</section>

<style>
  .intro-section {
    position: relative;
    width: 100%;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1.5rem;
    text-align: center;
    background: linear-gradient(180deg, #0a0a0a 0%, #1a1a2e 100%);
  }

  .intro-section__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .intro-section__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 8vw, 5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
  }

  .intro-section__title-line {
    display: block;
    color: var(--color-text);
  }

  .intro-section__title-line--accent {
    color: var(--color-accent);
  }

  .intro-section__subtitle {
    font-size: clamp(1rem, 3vw, 1.25rem);
    opacity: 0.7;
    max-width: 30ch;
  }

  .intro-section__cta {
    margin-top: 1rem;
    padding: 1rem 2.5rem;
    font-family: var(--font-body);
    font-size: 1.125rem;
    font-weight: 600;
    color: #fff;
    background: var(--color-accent);
    border: none;
    border-radius: 9999px;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .intro-section__cta:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(233, 69, 96, 0.4);
  }

  .intro-section__cta:active {
    transform: scale(0.98);
  }

  .intro-section__scroll-hint {
    margin-top: 2rem;
    opacity: 0.4;
    animation: bounce 2s infinite;
  }

  .intro-section__scroll-arrow {
    font-size: 1.5rem;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(8px); }
  }
</style>
